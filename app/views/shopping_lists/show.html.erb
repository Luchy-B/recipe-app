<div class="row justify-content-center">
<div class="col-4">
<h1 class='list'>Shopping List</h1>
</div>
</div>
<div class="row justify-content-center">
<div class="col-4">
<h5>Total Missing Food Items: <%= @total_food_items %></h5>
</div>
<div class="col-4">
<h5>Total : <%= number_to_currency(@total_price) %></h5>
</div>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark bg-dark">
    <tr class="header">
      <th>Food Item</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_food_list.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.quantity %></td>
        <td><%= number_to_currency(food_item.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
