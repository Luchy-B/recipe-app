<div class="row justify-content-center">
<div class="col-4">
<h1>Shopping List</h1>
</div>
</br>
</div>
<div class="row justify-content-center">
<div class="col-4">
<p>Total Food Items: <%= @total_items %></p>
</div>
<div class="col-4">
<p>Total Price: <%= @total_price %></p>
</div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark bg-dark">
    <tr class="header">
      <th>Name</th>
      <th>Measurement Unit</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
