<p style="color: green"><%= notice %></p>
<%= button_to "Add food", new_food_path, method: :get, class: "btn btn-primary btn-sm" %>
</br>
<h1>Foods</h1>
<div id="foods">
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
      <th><strong>Name</strong></th>
      <th><strong>Measurement unit</strong></th>
        <th><strong>Unit Price</strong></th>
        <th><strong>Quantity</strong></th>
        <th colspan="2"><strong>Actions</strong></th>
      </tr>
    </thead>
    <tbody>
  <% @foods.each do |food| %>
    <tr>
    <td><%= food.name %> </td>
     <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= food.user_id %></td>
      <td><%= button_to "Delete", food, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</div>
</table>

