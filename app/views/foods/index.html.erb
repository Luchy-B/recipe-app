<p style="color: green"><%= notice %></p>
<%= button_to "Add food", new_food_path, method: :get, class: "btn btn-primary btn-sm", class:"Add"%>
</br>
<div class="container">
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark bg-dark">
      <tr class="header">
      <th><strong>Name</strong></th>
      <th><strong>Measurement unit</strong></th>
        <th><strong>Unit Price</strong></th>
        <th><strong>Quantity</strong></th>
        <th colspan="2"><strong>Actions</strong></th>
      </tr>
    </thead>
    <tbody>
  <% @foods.each do |food| %>
    <tr>
    <td><%= food.name %> </td>
     <td><%= food.measurement_unit %></td>
     <td><%= number_to_currency(food.price, unit: "$") %></td>
      <td><%= food.quantity %></td>
      <td><%= food.user_id %></td>
      <td><%= button_to "Delete", food, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</div>
</table>

