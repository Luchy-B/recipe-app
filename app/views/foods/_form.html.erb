<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field form-group'>
   
    <%= form.text_field :name, class:'form-control', placeholder:"Food Name"%>
  </div>
  <br>
  <div class='field form-group'> 
    <%= form.text_field :measurement_unit, class:'form-control', placeholder:"measurement_unit" %>
  </div>
  <br>
  <div class='field form-group'>
    <%= form.text_field :price, class:'form-control', placeholder:"price"%>
  </div>
  <br>
  <div class='field form-group'>
    <%= form.number_field :quantity, class:'form-control', placeholder:"quantity" %>
  </div>
  <br>
  <div class='field form-group'>
    <%= form.number_field :user_id, id: :food_user_id, class:'form-control', value:current_user.id, type: :hidden %>
  </div>
  
  <br>
  <div class='actions'>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
